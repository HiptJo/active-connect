{
  "name": "active-connect",
  "version": "0.0.1",
  "description": "Connection framework built for smart web-based projects using NodeJS, Angular and Websockets.",
  "author": "Jonas Hiptmair <office@hiptmairit.at>",
  "keywords": [
    "API",
    "WS",
    "websocket",
    "node server"
  ],
  "main": "./dist/active-connect.js",
  "typings": "./dist/active-connect.d.ts",
  "license": "MIT",
  "scripts": {
    "start": "tsc -w",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts ./test/**/*.ts -t verbose",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "test:coverage": "nyc npm test",
    "tsc": "tsc"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "json",
      "html"
    ],
    "report-dir": "./reports/coverage",
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@types/mocha": "^8.2.0",
    "@types/sinon": "^9.0.10",
    "assert": "^2.0.0",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "mocha": "^8.3.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.4",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^4.1.3",
    "typescript-ioc": "^3.0.3",
    "typescript-rest-ioc": "^1.0.0",
    "ws": "^7.4.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/ws": "^7.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HiptJo/active-connect.git"
  },
  "bugs": {
    "url": "https://github.com/HiptJo/active-connect/issues"
  },
  "directories": {
    "lib": "dist",
    "doc": "doc"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "engineStrict": true
}
